<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="380dp"
    app:cardBackgroundColor="@color/cardcolor"
    android:layout_gravity="center"
    app:cardCornerRadius="30sp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/question_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SignUpBox"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:maxLines="4"
                android:gravity="top"
                android:inputType="text"
                android:hint="Enter Question"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option1_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_box"
            style="@style/SignUpBox"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter Option 1"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option2_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option1_box"
            style="@style/SignUpBox"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter Option 2"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option3_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option2_box"
            style="@style/SignUpBox"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter Option 3"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option4_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option3_box"
            style="@style/SignUpBox"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter Option 4"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdown_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option4_box"
            android:hint="Select Answer Option No."
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"            >
            <AutoCompleteTextView
                android:id="@+id/dropdown_items"
                android:layout_width="match_parent"
                android:inputType="none"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_question_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dropdown_answer"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Save"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>